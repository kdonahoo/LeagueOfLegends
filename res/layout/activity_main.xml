<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/riven"
    tools:context=".MainActivity" >
        
    <ImageView 
  		android:id="@+id/lolLogo"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content" 
  		android:layout_centerHorizontal="true"
  		android:src="@drawable/lol_logo" />
    
    <ImageView 
  		android:id="@+id/blueBlueBuff"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_marginLeft="80dp"
  		android:layout_below="@id/lolLogo" 
  		android:layout_alignParentLeft="true" 
  		android:src="@drawable/blue_golem" />
    
    <TextView
        android:id="@+id/blueBlueBuffText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lolLogo" 
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:text="@string/testString"
        android:background="@drawable/cloud_box"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        />
    
    <ImageView 
        android:id="@+id/purpleBlueBuff"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_marginRight="80dp"
  		android:layout_below="@id/lolLogo" 
  		android:layout_alignParentRight="true" 
  		android:src="@drawable/blue_golem" />
    
    <TextView
        android:id="@+id/purpleBlueBuffText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lolLogo" 
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:text="@string/testString"
        android:background="@drawable/cloud_box"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        />
    
    <ImageView 
        android:id="@+id/blueRedBuff"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_marginTop="30dp"
  		android:layout_marginLeft="80dp"
  		android:layout_alignParentLeft="true"
  		android:layout_below="@id/blueBlueBuff"
  		android:src="@drawable/red_lizard" />
    
    <TextView
        android:id="@+id/blueRedBuffText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="@string/testString"
        android:background="@drawable/cloud_box"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@id/blueBlueBuff"
        android:layout_marginTop="50dp"
        />
    
    <ImageView 
        android:id="@+id/purpleRedBuff"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_marginTop="30dp"
  		android:layout_marginRight="80dp"
  		android:layout_alignParentRight="true" 
  		android:layout_below="@id/purpleBlueBuff"
  		android:src="@drawable/red_lizard" />
    
    <TextView
        android:id="@+id/purpleRedBuffText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="@string/testString"
        android:background="@drawable/cloud_box"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@id/purpleBlueBuff"
        android:layout_marginTop="50dp"
        />
    
    <ImageView 
        android:id="@+id/dragon"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_marginTop="30dp"
  		android:layout_marginLeft="80dp"
  		android:layout_alignParentLeft="true" 
  		android:layout_below="@id/blueRedBuff"
  		android:src="@drawable/dragon" />
    
    <TextView
        android:id="@+id/dragonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="@string/testString"
        android:background="@drawable/cloud_box"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@id/blueRedBuff"
        android:layout_marginTop="50dp"
        />
    
    <ImageView 
        android:id="@+id/baron"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_marginTop="30dp"
  		android:layout_marginRight="80dp"
  		android:layout_alignParentRight="true" 
  		android:layout_below="@id/purpleRedBuff"
  		android:src="@drawable/baron" />
    
    <TextView
        android:id="@+id/baronText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="@string/testString"
        android:background="@drawable/cloud_box"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@id/purpleRedBuff"
        android:layout_marginTop="50dp"
        />
    
    

</RelativeLayout>