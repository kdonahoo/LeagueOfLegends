<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/rockygradient"
    tools:context=".FreeToPlayActivity" >
        
    <ImageView 
  		android:id="@+id/lolLogo"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content" 
  		android:layout_marginTop="-50dp"
  		android:layout_centerHorizontal="true"
  		android:src="@drawable/lol_logo" />
    
    <ImageView 
  		android:id="@+id/champion1"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_below="@id/lolLogo" 
  		android:layout_marginTop="-40dp"
  		android:layout_alignParentLeft="true" 
  		android:src="@drawable/ahri2" />
    
    <ImageView 
        android:id="@+id/champion2"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_below="@id/lolLogo" 
  		android:layout_marginTop="-40dp"
  		android:layout_alignParentRight="true" 
  		android:src="@drawable/lulu" />
    
    <ImageView 
        android:id="@+id/champion3"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_alignParentLeft="true"
  		android:layout_below="@id/champion1"
  		android:src="@drawable/kennen" />
    
    <ImageView 
        android:id="@+id/champion4"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_alignParentRight="true" 
  		android:layout_below="@id/champion2"
  		android:src="@drawable/shyvana" />
    
    <ImageView 
        android:id="@+id/champion5"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_alignParentLeft="true" 
  		android:layout_below="@id/champion3"
  		android:src="@drawable/nocturne" />

    
    <ImageView 
        android:id="@+id/champion6"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_alignParentRight="true" 
  		android:layout_below="@id/champion4"
  		android:src="@drawable/malphite" />
    
    <ImageView 
        android:id="@+id/champion7"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_alignParentLeft="true" 
  		android:layout_below="@id/champion5"
  		android:src="@drawable/twistedfate" />

    
    <ImageView 
        android:id="@+id/champion8"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_alignParentRight="true" 
  		android:layout_below="@id/champion6"
  		android:src="@drawable/missfortune" />
    
    <ImageView 
        android:id="@+id/champion9"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_alignParentLeft="true" 
  		android:layout_below="@id/champion7"
  		android:src="@drawable/swain" />
    
    <ImageView 
        android:id="@+id/champion10"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_alignParentRight="true" 
  		android:layout_below="@id/champion8"
  		android:src="@drawable/jarvan" />

</RelativeLayout>